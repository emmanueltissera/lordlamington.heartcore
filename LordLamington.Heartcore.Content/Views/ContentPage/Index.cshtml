@model ContentPage

<div class="ck_bc_main_wrapper float_left"  id="page-shop">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-12">
                <div class="ck_slider_top_content float_left">
                    <h1>@Model.Title</h1>
                    <img src="@Model.HeroImage.Url" alt="@Model.HeroImage.Name" class="img-fluid" />
                </div>
            </div>
        </div>
        
        @Html.DisplayFor(x => Model.BodyText)
    </div>
</div>
